{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./lib",
      "baseUrl": "./src",
      "strict": true,
      "typeRoots": [
        "types"
      ],
      "types": [ "node" ],
      "incremental": false,
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": false,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
  }